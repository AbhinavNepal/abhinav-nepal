<% if @searching && scholars.first_page? %>
  <div class="scholar-search-info mb-3">
    <div class="clearfix small">
      <span class="text-muted"><%= t(".result_count_html", count: scholars.total_count) %></span>
      <%= link_to fa_icon("window-close", text: "Clear filter"), scholars_path, class: "float-right text-muted" %>
    </div>
  </div>
<% end %>

<div class="row">
  <% scholars.each do |scholar| %>
    <div class="col-md-4">
      <%= render scholar %>
    </div>
  <% end %>
</div>
