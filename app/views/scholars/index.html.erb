<div class="row mb-3">
  <div class="col-sm-11">
    <div id="scholars-search">
      <div class="input-group">
        <div class="input-group-prepend">
          <span class="input-group-text"><%= fa_icon("search") %></span>
        </div>
        <input type="text" class="form-control" placeholder="Search scholars by name, discipline or institute" aria-label="Username" aria-describedby="basic-addon1">
      </div>
    </div>
  </div>
  <div class="col-sm-1">
    <div class="float-right">
      <%= link_to fa_icon("user-plus"), new_scholar_path, class: "btn btn-outline-primary", title: "Add Scholar" %>
    </div>
  </div>
</div>

<% @scholars.in_groups_of(3).each do |grouped_scholars| %>
  <div class="row">
    <% grouped_scholars.compact.each do |scholar| %>
      <div class="col-md-4">
        <div class="card flex-md-row mb-4 box-shadow h-md-250">
          <div class="card-body d-flex flex-column align-items-start">
            <strong class="d-inline-block mb-2 <%= scholar.discipline.root.code %>"><%= scholar.discipline.root %></strong>
            <h5 class="mb-0">
              <%= scholar.name %>
            </h5>
            <div class="mb-1 text-muted small"><%= scholar.discipline %></div>
            <p class="card-text mb-auto"><%= scholar.description %></p>
            <div class="small">
              <% scholar.web_urls.each do |web_url| %>
                <%= link_to web_url.title, web_url.url, target: "_blank" %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% end %>
