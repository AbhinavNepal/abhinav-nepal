<div class="mb-2">
  <h4>
    <%= Scholar.name.pluralize  %>
    <%= link_to fa_icon("user-plus"), new_scholar_path, class: "btn btn-outline-primary float-right", title: "Add Scholar" %>
  </h4>
  <p class="lead">
    <%= t ".description" %>
  </p>
</div>

<%= render "search" %>

<div id="scholar-results">
  <div class="pagination-container">
    <%= render "scholars", scholars: @scholars %>
  </div>
  <%= render "kaminari/load_paginator", scholars: @scholars %>
</div>
