<div class="row">
  <div class="col-md-4">
    <%= f.input :first_name %>
  </div>
  <div class="col-md-4">
    <%= f.input :middle_name %>
  </div>
  <div class="col-md-4">
    <%= f.input :last_name %>
  </div>
</div>
<%= f.input :description %>

<%= f.association :discipline, collection: Discipline.leaves %>

<div class="clearfix mt-3">
  <div class="float-right">
    <%= f.button :submit, class: "btn btn-outline-success btn-sm" %>
    <%= link_to "Cancel", scholars_path, class: "btn btn-outline-danger btn-sm" %>
  </div>
</div>
