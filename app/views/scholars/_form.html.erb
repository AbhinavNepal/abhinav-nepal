<div class="card mb-2">
  <div class="card-header">
    <%= fa_icon "user-circle-o", text: "Details" %>
  </div>
  <div class="card-body">
    <div class="row">
      <div class="col-md-4">
        <%= f.input :first_name, autofocus: true %>
      </div>
      <div class="col-md-4">
        <%= f.input :middle_name %>
      </div>
      <div class="col-md-4">
        <%= f.input :last_name %>
      </div>
    </div>
    <%= f.association :discipline, collection: Discipline.roots,
                                   as: :grouped_select,
                                   group_method: :descendants,
                                   group_label_method: :title %>
    <%= f.input :description %>
  </div>
</div>

<div class="card mb-2">
  <div class="card-header">
    <%= fa_icon "university", text: "Organisation" %>
  </div>
  <div class="card-body">
    <%= f.simple_fields_for :organisation do |of| %>
      <div class="row">
        <div class="col-md-4">
          <%= of.input :name %>
        </div>
        <div class="col-md-4">
          <%= of.input :position %>
        </div>
        <div class="col-md-4">
          <%= of.input :country_code, include_blank: true %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<div class="card">
  <div class="card-header">
    <%= fa_icon "link", text: "Links" %>
  </div>
  <div class="card-body web_urls">
    <% f.object.web_urls.each do |web_url| %>
      <%= f.simple_fields_for :web_urls, web_url do |wuf| %>
        <%= render "web_url_fields", f: wuf %>
      <% end %>
    <% end %>
    <div class="clearfix">
      <%= link_to_add_association "Add more", f, :web_urls, class: "float-right" %>
    </div>
  </div>
</div>

<div class="clearfix mt-3">
  <div class="float-right">
    <%= f.button :submit, "Save", class: "btn btn-outline-success" %>
    <%= link_to "Cancel", scholars_path, class: "btn btn-outline-danger" %>
  </div>
</div>
